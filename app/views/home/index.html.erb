<div class="flex-container">
  <div class="content">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 text-center">
        <h1 class="wallpaper display-4 mb-4 text-primary">Welcome to Budget App</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 text-center">
        <%= image_tag(asset_path("currency.svg"), alt: "Budget App", class: "img-fluid mt-2") %>
      </div>
    </div>
  </div>

  <div class="d-flex flex-column justify-content-center custom-button-group">
    <%= link_to new_user_registration_path, class: 'bttn btn-primary' do %>
      <i class="fas fa-user-plus"></i> Sign Up
    <% end %>
    <%= link_to new_user_session_path, class: 'bttn btn-outline-primary' do %>
      <i class="fas fa-sign-in-alt"></i> Log In
    <% end %>
  </div>
</div>