<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
  <body class="signup-body">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card shadow">
            <div class="card-body">
            <header class="header-class">
                <%= link_to root_path, data: { turbo: false }  do %>
                  <%= inline_svg_tag "chevron_left.svg", class: "chevron" %>
                <% end %>                  
              <div class="header-title-wrapper">
                <h2 class="mb-4 header-title"><i class="fas fa-user-plus"></i> REGISTER</h2>
              </div>
              <div class="form-actions text-center">
                <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { class: 'd-inline' }) do |f| %>
                  <%= f.submit "Next", class: 'signup-button btn-lg px-3' %>
                <% end %>
              </div>
              </header>

              <turbo-frame id="signup_form">
                <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-4' }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="mb-3">
                    <div class="input-group">
                      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: 'Name' %>
                    </div>
                  </div>

                  <div class="mb-3">
                    <div class="input-group">
                      <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
                    </div>
                  </div>

                  <div class="mb-3">
                    <div class="input-group">
                      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Password' %>
                    </div>
                  </div>

                  <div class="mb-3">
                    <div class="input-group">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm Password' %>
                    </div>
                  </div>
                <% end %>
              </turbo-frame>

              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>