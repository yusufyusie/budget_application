<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="text-center mb-4"><i class="fas fa-sign-in-alt"></i> Log in</h2>

          <% flash.each do |name, msg| %>
            <div class="alert alert-<%= name == 'notice' ? 'success' : 'danger' %>">
              <%= msg %>
            </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-4' }, data: { turbo: "false" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email' %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: 'form-label' %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter your password' %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="actions text-center">
              <%= f.submit "Log in", class: 'login-button' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>