<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <header class="header-class">
            <%= link_to root_path, data: { turbo: false }  do %>
                  <%= inline_svg_tag "chevron_left.svg", class: "chevron" %>
                <% end %> 
            <h4 class="mb-4 header-title"><i class="fas fa-key"></i> Forgot your password?</h4>
          </header>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'mt-4' }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
              </div>
            </div>

            <div class="actions text-center">
              <%= f.submit "Send me reset password instructions", class: 'login-button' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>